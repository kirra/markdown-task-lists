{
    "name": "kirra/markdown-task-lists",
    "description": "Support Github's Task Lists in a cebe/markdown parser.",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Kirra\\Markdown\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kirra\\Markdown\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "cebe/markdown": "1.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "license": "MIT"
}
